{
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": "tab",
    "declaration-block-properties-order": [
      [
        "src",
        "content",
        "display",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "z-index",
        "visibility",
        "overflow",
        "flex",
        "flex-basis",
        "flex-direction",
        "flex-flow",
        "flex-grow",
        "flex-shrink",
        "flex-wrap",
        "align-content",
        "align-items",
        "align-self",
        "justify-content",
        "order",
        "clear",
        "float",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "border",
        "border-top",
        "border-right",
        "border-bottom",
        "border-left",
        "border-width",
        "border-top-width",
        "border-right-width",
        "border-bottom-width",
        "border-left-width",
        "border-style",
        "border-top-style",
        "border-right-style",
        "border-bottom-style",
        "border-left-style",
        "border-radius",
        "border-top-left-radius",
        "border-top-right-radius",
        "border-bottom-left-radius",
        "border-bottom-right-radius",
        "border-color",
        "border-top-color",
        "border-right-color",
        "border-bottom-color",
        "border-left-color",
        "outline",
        "outline-color",
        "outline-offset",
        "outline-style",
        "outline-width",
        "background",
        "background-image",
        "background-position",
        "background-repeat",
        "background-color",
        "background-size",
        "box-shadow",
        "opacity",
        "table-layout",
        "border-collapse",
        "border-spacing",
        "caption-side",
        "empty-cells",
        "cursor",
        "list-style",
        "list-style-position",
        "list-style-type",
        "list-style-image",
        "vertical-align",
        "text-align",
        "text-indent",
        "text-decoration",
        "text-shadow",
        "text-overflow",
        "text-wrap",
        "text-transform",
        "text-rendering",
        "quotes",
        "line-height",
        "font",
        "font-family",
        "font-size",
        "font-weight",
        "font-style",
        "font-variant",
        "font-smoothing",
        "letter-spacing",
        "white-space",
        "word-spacing",
        "color",
        "at-rule"
      ]
    ]
  }
}
